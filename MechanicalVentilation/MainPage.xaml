<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MechanicalVentilation.MainPage">
    <StackLayout>
        <HorizontalStackLayout>
            <Button Text=" Dodaj Kondygnacje" Grid.Column="1"/>
            <Button Text="Dodaj Pomieszczenie" Grid.Column="2"/>
        </HorizontalStackLayout>

        <Grid RowDefinitions="140, Auto"
          ColumnDefinitions="65, 140, 130, 140, 110, 110, 140, 140, 140, 140"
          Padding="10"
          RowSpacing="5"
          ColumnSpacing="5">
            
            <Frame>
                <Label Text="L.P"/>
            </Frame>
            <Frame Grid.Column="1">
                <Label Text="Nazwa Pomieszczenia"/>
            </Frame>
            <Frame Grid.Column="2" >
                <Label Text="Powierzchnia [m2]"/>
            </Frame>
            <Frame Grid.Column="3">
                <Label Text="Wysokosc pomieszczenia"/>
            </Frame>
            <Frame Grid.Column="4" >
                <Label Text="Kubatura [m3]"/>
            </Frame>
            <Frame Grid.Column="5" >
                <Label Text="Krotnosc Wymian [1/h]"/>
            </Frame>
            <Frame Grid.Column="6" >
                <Label Text="Obliczeniowy strumien powietrza nawiewanego [m3/h]"/>
            </Frame>
            <Frame Grid.Column="7" >
                <Label Text="Obliczeniowy strumien powietrza wywiewanego [m3/h]"/>
            </Frame>
            <Frame Grid.Column="8" >
                <Label Text="Przyjety strumien powietrza nawiewanego [m3/h]"/>
            </Frame>
            <Frame Grid.Column="9" >
                <Label Text="Przyjety strumien powietrza wywiewanego [m3/h]"/>
            </Frame>

            <CollectionView Grid.Row="1" Grid.ColumnSpan="10"
                        ItemsSource="{Binding Floors}"
                        IsGrouped="true">
                <CollectionView.GroupHeaderTemplate>
                    <DataTemplate>
                        <Label Text="{Binding Name}"/>
                    </DataTemplate>
                </CollectionView.GroupHeaderTemplate>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid RowDefinitions="Auto, Auto, Auto"
                            ColumnDefinitions="65, 140, 130, 140, 110, 110, 140, 140, 140, 140"
                            Padding="0"
                            RowSpacing="5"
                            ColumnSpacing="5">
                            
                            <Frame>
                                <Label Text="{Binding Id}"/>
                            </Frame>
                            <Frame Grid.Column="1">
                                <Label Text="{Binding Name}" />
                            </Frame>
                            <Frame Grid.Column="2" >
                                <Entry Placeholder="{Binding SurfaceM2}"/>
                            </Frame>
                            <Frame Grid.Column="3" >
                                <Entry Placeholder="{Binding RoomHeight}"/>
                            </Frame>
                            <Frame Grid.Column="4" >
                                <Entry Placeholder="{Binding Cubage}"/>
                            </Frame>
                            <Frame Grid.Column="5" >
                                <Label Text="{Binding Exchanges}"/>
                            </Frame>
                            <Frame Grid.Column="6" >
                                <Label Text="{Binding DesignSupplyAirFlowRate}"/>
                            </Frame>
                            <Frame Grid.Column="7" >
                                <Label Text="{Binding DesignExhaustAirFlowRate}"/>
                            </Frame>
                            <Frame Grid.Column="8" >
                                <Entry Placeholder="{Binding AssumedSupplyAirFlowRate}"/>
                            </Frame>
                            <Frame Grid.Column="9" >
                                <Entry Placeholder="{Binding AssumedExhaustAirFlowRate}"/>
                            </Frame>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
    </StackLayout>
</ContentPage>
