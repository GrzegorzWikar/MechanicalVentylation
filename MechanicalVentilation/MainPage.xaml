<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MechanicalVentilation.MainPage"
             >
    
    <StackLayout>
        <HorizontalStackLayout>
            <Button Text=" Dodaj Kondygnacje" Grid.Column="1" Command="{Binding AddFloorCommand }"/>
            <Button Text="Dodaj Pomieszczenie" Grid.Column="2"/>
        </HorizontalStackLayout>
        <Grid 
              RowDefinitions="140, Auto"
              ColumnDefinitions="65, 140, 130, 140, 110, 110, 140, 140, 140, 140"
              Padding="10"
              RowSpacing="5"
              ColumnSpacing="5">
            
            <Border>
                <Label Text="L.P"/>
            </Border>
            <Border Grid.Column="1">
                <Label Text="Nazwa Pomieszczenia"/>
            </Border>
            <Border Grid.Column="2" >
                <Label Text="Powierzchnia [m2]"/>
            </Border>
            <Border Grid.Column="3">
                <Label Text="Wysokosc pomieszczenia"/>
            </Border>
            <Border Grid.Column="4" >
                <Label Text="Kubatura [m3]"/>
            </Border>
            <Border Grid.Column="5" >
                <Label Text="Krotnosc Wymian [1/h]"/>
            </Border>
            <Border Grid.Column="6" >
                <Label Text="Obliczeniowy strumien powietrza nawiewanego [m3/h]"/>
            </Border>
            <Border Grid.Column="7" >
                <Label Text="Obliczeniowy strumien powietrza wywiewanego [m3/h]"/>
            </Border>
            <Border Grid.Column="8" >
                <Label Text="Przyjety strumien powietrza nawiewanego [m3/h]"/>
            </Border>
            <Border Grid.Column="9" >
                <Label Text="Przyjety strumien powietrza wywiewanego [m3/h]"/>
            </Border>

            <CollectionView Grid.Row="1" Grid.ColumnSpan="10"
                        ItemsSource="{Binding Floors}"
                        IsGrouped="true">
                <CollectionView.GroupHeaderTemplate>
                    <DataTemplate>
                        <Label Text="{Binding Name}"/>
                    </DataTemplate>
                </CollectionView.GroupHeaderTemplate>
                <CollectionView.ItemTemplate>
                    <DataTemplate >
                        <Grid
                            ColumnDefinitions="65, 140, 130, 140, 110, 110, 140, 140, 140, 140"
                            Padding="0"
                            RowSpacing="5"
                            ColumnSpacing="5">

                            <Border>
                                <Label VerticalOptions="Center" HorizontalOptions="Center" Text="{Binding Id}"/>
                            </Border>
                            <Border Grid.Column="1">
                                <Label Text="{Binding Name}" />
                            </Border>
                            <Border Grid.Column="2" >
                                <Entry VerticalOptions="Center" HorizontalOptions="Center" Placeholder="{Binding SurfaceM2}"/>
                            </Border>
                            <Border Grid.Column="3" >
                                <Entry Placeholder="{Binding RoomHeight}"/>
                            </Border>
                            <Border Grid.Column="4" >
                                <Entry Placeholder="{Binding Cubage}"/>
                            </Border>
                            <Border Grid.Column="5" >
                                <Label Text="{Binding Exchanges}"/>
                            </Border>
                            <Border Grid.Column="6" >
                                <Label Text="{Binding DesignSupplyAirFlowRate}"/>
                            </Border>
                            <Border Grid.Column="7" >
                                <Label Text="{Binding DesignExhaustAirFlowRate}"/>
                            </Border>
                            <Border Grid.Column="8" >
                                <Entry Placeholder="{Binding AssumedSupplyAirFlowRate}"/>
                            </Border>
                            <Border Grid.Column="9" >
                                <Entry Placeholder="{Binding AssumedExhaustAirFlowRate}"/>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
    </StackLayout>
</ContentPage>
